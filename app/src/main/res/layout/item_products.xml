<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_marginLeft="18dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    tools:text="Una rotizeria re copada con un nombre re largo"
                    />
                <TextView
                    android:id="@+id/item_product_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    tools:text="Venta de pollos asados "
                    />
                <TextView
                    android:id="@+id/had_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:text="@string/no_stock"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/price"
                    />
                <TextView
                    android:id="@+id/item_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginBottom="10dp"
                    tools:text="$12"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/item_product_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_border"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        />
                    <ImageView
                        android:id="@+id/item_product_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/shape_border"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_delete_24"
                        />
                </LinearLayout>

            </LinearLayout>


        <ImageView
            android:id="@+id/item_product_image"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="10dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>