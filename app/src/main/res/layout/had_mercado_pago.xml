<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif-black"
                android:text="Parece que tienes Mercado Pago Instalado" />

            <TextView
                android:id="@+id/invoice_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Puedes pagar haciendo click en el boton de abajo y seleccionando Mercado Pago. \n \n Luego envia el comprobante con el mismo boton" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>